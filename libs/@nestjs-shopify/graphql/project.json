{
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/@nestjs-shopify/graphql/src",
  "name": "graphql",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/@nestjs-shopify/graphql",
        "tsConfig": "libs/@nestjs-shopify/graphql/tsconfig.lib.json",
        "packageJson": "libs/@nestjs-shopify/graphql/package.json",
        "main": "libs/@nestjs-shopify/graphql/src/index.ts",
        "assets": ["libs/@nestjs-shopify/graphql/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/@nestjs-shopify/graphql/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/packages/graphql"],
      "options": {
        "jestConfig": "libs/@nestjs-shopify/graphql/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "implicitDependencies": ["auth", "core"],
  "tags": []
}
