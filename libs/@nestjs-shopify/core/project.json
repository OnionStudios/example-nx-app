{
  "name": "@nestjs-shopify-core",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/@nestjs-shopify/core/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/@nestjs-shopify/core",
        "tsConfig": "libs/@nestjs-shopify/core/tsconfig.lib.json",
        "packageJson": "libs/@nestjs-shopify/core/package.json",
        "main": "libs/@nestjs-shopify/core/src/index.ts",
        "assets": ["libs/@nestjs-shopify/core/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs @nestjs-shopify-core {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/@nestjs-shopify/core/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/@nestjs-shopify/core/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
